{
  "compilerOptions": {
    // CRITICAL FIXES: Tell TS where to look and where to save
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment Settings
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es2016",
    "types": ["node"], // Explicitly include Node types

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Recommended Options
    "strict": true,
    // "jsx": "react-jsx", // <-- REMOVED (This is a backend server, not React)
    "isolatedModules": true,
    "moduleDetection": "force",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],  // Ensure we only compile the src folder
  "exclude": ["node_modules", "**/*.test.ts"]
}